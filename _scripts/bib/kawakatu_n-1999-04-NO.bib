@ARTICLE{2006MNRAS.370.1513K,
   author = {{Kawakatu}, N. and {Kino}, M.},
    title = "{On the dynamical evolution of hotspots in powerful radio-loud active galactic nuclei}",
  journal = {\mnras},
   eprint = {astro-ph/0605482},
 keywords = {hydrodynamics: shock waves: galaxies: active: galaxies: jets, hydrodynamics, shock waves, galaxies: active, galaxies: jets},
     year = 2006,
    month = aug,
   volume = 370,
    pages = {1513-1518},
 abstract = "{We describe the dynamical evolution of hotspots velocity, pressure and
mass density in radio-loud active galactic nuclei (AGNs), taking proper
account of (1) the conservations of the mass, momentum and kinetic
energy flux of the unshocked jet, (2) the deceleration process of the
jet by shocks and (3) the cocoon expansion without assuming the constant
aspect ratio of the cocoon. By the detailed comparison with
two-dimensional relativistic hydrodynamic simulations, we show that our
model well reproduces the whole evolution of relativistic jets. Our
model can explain also the observational trends of the velocity, the
pressure, the size and mass density of hotspots in compact symmetric
objects (CSOs) and Fanaroff-Riley type II (FR II) radio galaxies.
}",
      doi = {10.1111/j.1365-2966.2006.10574.x},
   adsurl = {http://adsabs.harvard.edu/abs/2006MNRAS.370.1513K},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@ARTICLE{2005MNRAS.364..659K,
   author = {{Kino}, M. and {Kawakatu}, N.},
    title = "{Estimate of the total kinetic power and age of an extragalactic jet by its cocoon dynamics: the case of Cygnus A}",
  journal = {\mnras},
   eprint = {astro-ph/0506626},
 keywords = {plasmas, radiation mechanisms: non-thermal, galaxies: active, galaxies: individual: Cygnus A},
     year = 2005,
    month = dec,
   volume = 364,
    pages = {659-664},
 abstract = "{We examine the constraints imposed on the total kinetic power
(L$_{j}$) and the age (t$_{age}$) of relativistic jets in
Fanaroff-Riley type II radio sources in a new way. We solve the
dynamical expansion of its cocoon embedded in the intracluster medium
and obtain the analytical solution of its physical quantities in terms
of L$_{j}$ and t$_{age}$. We estimate L$_{j}$ and
t$_{age}$ using a comparison of the model and the observed shape
of the cocoon. The analysis focuses on Cygnus A and we find that (i) the
source age is 3 {\lt} t$_{age}$ {\lt} 30 Myr and (ii) the total
kinetic power of the jet is estimated as 0.2 {\times} 10$^{46}$
{\lt} L$_{j}$ {\lt} 1 {\times} 10$^{48}$ erg s$^{-1}$,
which is larger than 1 per cent of the Eddington luminosity of Cygnus A.
}",
      doi = {10.1111/j.1365-2966.2005.09580.x},
   adsurl = {http://adsabs.harvard.edu/abs/2005MNRAS.364..659K},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@ARTICLE{2004cbhg.sympE..31K,
   author = {{Kawakatu}, N. and {Umemura}, M. and {Mori}, M.},
    title = "{A Scenario for the Coevolution of an Elliptical Galaxy and a QSO}",
  journal = {Coevolution of Black Holes and Galaxies},
     year = 2004,
 abstract = "{Based on the radiation hydrodynamic model for the black hole(BH) growth
and incorporating the chemical evolution of the early-type host galaxy,
we construct the coevolution model of the quasar(QSO)BH and the host
galaxy.  As a result, it is found that after a galactic wind epoch, the
luminosity is shifted from the host-dominant phase to the active
galactic nucleus-dominant phase(QSO phase) in the timescale of a few
10$^{8}$yr.  The former phase corresponds to the early stage of a
growing BH and can be regarded as a ``proto-QSO'' phase.  Also, by
considering theoretical predictions for the observable properties in
proto-QSO phase, we conclude that radio galaxies at high redshifts are a
possible candidate for proto-QSOs.
}",
   adsurl = {http://adsabs.harvard.edu/abs/2004cbhg.sympE..31K},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

