archivePrefix = "arXiv",
   eprint = {0901.2968},
 primaryClass = "astro-ph.GA",
 keywords = {galaxies: active, galaxies: jets, gamma-rays: theory},
     year = 2009,
    month = feb,
   volume = 330,
    pages = {257},
 abstract = "{Gamma-ray emission from cocoons of young radio galaxies is predicted.
Considering the process of adiabatic injection of the shock dissipation
energy and mass of the relativistic jet into the cocoon, we find that
the thermal electron temperature of the cocoon is typically predicted to
be of the order of {\tilde}MeV, and is determined only by the bulk
Lorentz factor of the jet. Together with the time-dependent dynamics of
the cocoon expansion, we find that young cocoons can yield thermal
bremsstrahlung emissions at energies {\tilde}MeV. Hotter cocoons (i.e.,
GeV) for younger sources are also discussed.
}",
      doi = {10.1002/asna.200811170},
   adsurl = {http://adsabs.harvard.edu/abs/2009AN....330..257K},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@ARTICLE{2008MNRAS.386..608L,
   author = {{Lapi}, A. and {Kawakatu}, N. and {Bosnjak}, Z. and {Celotti}, A. and 
  {Bressan}, A. and {Granato}, G.~L. and {Danese}, L.},
    title = "{Long gamma-ray bursts and their host galaxies at high redshift}",
  journal = {\mnras},
archivePrefix = "arXiv",
   eprint = {0802.0787},
 keywords = {Galaxy: formation , galaxies: evolution , gamma-rays: bursts},
     year = 2008,
    month = may,
   volume = 386,
    pages = {608-618},
 abstract = "{Motivated by the recent observational and theoretical evidence that long
gamma-ray bursts (GRBs) are likely associated with low metallicity,
rapidly rotating massive stars, we examine the cosmological star
formation rate (SFR) below a critical metallicity Z$_{crit}$ \~{}
1/10-1/5Z$_{solar}$, to estimate the event rate of high redshift
long GRB progenitors. To this purpose, we exploit a galaxy formation
scenario already successfully tested on a wealth of observational data
on (proto)spheroids, Lyman break galaxies, Lyman {$\alpha$} emitters, submm
galaxies, quasars and local early-type galaxies. We find that the
predicted rate of long GRBs amounts to about 300 events yr$^{-1}$
sr$^{-1}$, of which about 30 per cent occur at z {\gt}\~{} 6.
Correspondingly, the GRB number counts well agree with the bright SWIFT
data, without the need for an intrinsic luminosity evolution. Moreover,
the above framework enables us to predict the properties of the GRB host
galaxies. Most GRBs are associated with low-mass galaxy haloes
M$_{H}$ {\lt}\~{} 10$^{11}$M$_{solar}$, and effectively
trace the formation of small galaxies in such haloes. The hosts are
young, with age smaller than 5 {\times} 10$^{7}$ yr, gas rich, but
poorly extincted (A$_{V}$ {\lt}\~{} 0.1) because of their chemical
immaturity; this also implies high specific SFR and quite extreme
{$\alpha$}-enhancement. Only the minority of hosts residing in large haloes
with M$_{H}$ {\gt}\~{} 10$^{12}$M$_{solar}$ has larger
extinction (A$_{V}$ \~{} 0.7 - 1), SFRs exceeding
100M$_{solar}$yr$^{-1}$ and can be detected at submm
wavelengths. Most of the hosts have ultraviolet magnitudes in the range
-20 {\lt}\~{} M$_{1350}$ {\lt}\~{} -16, and Lyman {$\alpha$} luminosity in
the range 2 {\times} 10$^{40}$ {\lt}\~{} L$_{Lymanα}$ {\lt}\~{}
2 {\times} 10$^{42}$ erg s$^{-1}$. GRB hosts are thus tracing
the faint end of the luminosity function of Lyman break galaxies and
Lyman {$\alpha$} emitters. Finally, our results imply that the population
of `dark' GRBs occur mostly in faint hosts at high redshift, rather than
in dusty hosts at low redshift.
}",
      doi = {10.1111/j.1365-2966.2008.13076.x},
   adsurl = {http://adsabs.harvard.edu/abs/2008MNRAS.386..608L},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@ARTICLE{2007MNRAS.376.1630K,
   author = {{Kino}, M. and {Kawakatu}, N. and {Ito}, H.},
    title = "{Extragalactic MeV {$\gamma$}-ray emission from cocoons of young radio galaxies}",
  journal = {\mnras},
   eprint = {astro-ph/0611870},
 keywords = {galaxies: active, galaxies: jets, gamma-rays: theory},
     year = 2007,
    month = apr,
   volume = 376,
    pages = {1630-1634},
 abstract = "{Strong {$\gamma$}-ray emission from cocoons of young radio galaxies is
predicted for the first time. Considering the process of adiabatic
injection of the shock dissipation energy and mass of the relativistic
jet in active nuclei into the cocoon, while assuming thermalizing
electron plasma interactions, we find that the thermal electron
temperature of the cocoon is typically predicted to be of the order of \~{}
MeV, and is determined only by the bulk Lorentz factor of the
relativistic jet. Together with the time-dependent dynamics of the
cocoon expansion, we find that young cocoons can yield thermal
bremsstrahlung emissions at energies \~{}MeV.
}",
      doi = {10.1111/j.1365-2966.2007.11354.x},
   adsurl = {http://adsabs.harvard.edu/abs/2007MNRAS.376.1630K},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

