@ARTICLE{2003ApJ...587..500O,
   author = {{Okamoto}, T. and {Nagashima}, M.},
    title = "{Environmental Effects on Evolution of Cluster Galaxies in a {$\Lambda$}-dominated Cold Dark Matter Universe}",
