
@INPROCEEDINGS{2012AIPC.1480..412S,
   author = {{Shimizu}, I. and {Yoshida}, N. and {Okamoto}, T.},
    title = "{Lyman alpha emitters in cosmological simulations: Lyman alpha escape fraction and statistical properties}",
 keywords = {astronomy computing, astrophysical fluid dynamics, astrophysical radiation mechanisms, cosmology, hydrodynamics, statistical analysis, Radiation mechanisms, polarization, Hydrodynamics, Mathematical procedures and computer techniques, Mathematical and relativistic aspects of cosmology},
booktitle = {American Institute of Physics Conference Series},
     year = 2012,
   series = {American Institute of Physics Conference Series},
   volume = 1480,
   editor = {{Umemura}, M. and {Omukai}, K.},
    month = sep,
    pages = {412-414},
 abstract = "{By use large cosmological Smoothed-Particle-Hydrodynamics simulations,
we explore observed properties of Lyman alpha emitters (LAEs). We
develop a phenomenological model of absorption, scattering and escape of
Lyman alpha (Ly{$\alpha$}) photons motivated by Neufeld (1991). In our
model, we assume that the clumpiness of the inter-stellar medium in a
galaxy is correlated with the larger scale substructure richness. As a
result, we reproduce, for the first time, all of the following observed
properties of LAEs at z=3.1: Ly{$\alpha$} luminosity function, UV
luminosity function of LAEs, the angular correlation function and the
equivalent width distribution of Lya line. In this poster, we will
discuss not only the statistical properties of LAEs at the other
redshift (z = 2 \~{} 6), but also the relation between LAEs and the other
high-z galaxies such as Lyman break galaxies and Submm galaxies.
}",
      doi = {10.1063/1.4754404},
   adsurl = {http://adsabs.harvard.edu/abs/2012AIPC.1480..412S},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@INPROCEEDINGS{2012AIPC.1480..403O,
   author = {{Okamoto}, T.},
    title = "{Cosmological pseudobulge formation}",
 keywords = {cosmology, galaxies, red shift, Origin formation evolution age and star formation, Distances redshifts radial velocities, spatial distribution of galaxies, Cosmology},
booktitle = {American Institute of Physics Conference Series},
     year = 2012,
   series = {American Institute of Physics Conference Series},
   volume = 1480,
archivePrefix = "arXiv",
   eprint = {1206.5507},
 primaryClass = "astro-ph.CO",
   editor = {{Umemura}, M. and {Omukai}, K.},
    month = sep,
    pages = {403-405},
 abstract = "{Bulges can be classified into classical and pseudobulges; the former are
considered to be end products of galactic mergers and the latter to form
via secular evolution of galactic disks. Observationally, bulges of disk
galaxies are mostly pseudobulges, including the Milky Way's. We here
show, by using self-consistent cosmological simulations of galaxy
formation, that the formation of pseudobulges of Milky Way-sized disk
galaxies has mostly completed before disk formation; thus the main
channel of pseudobulge formation is not secular evolution of disks. Our
pseudobulges form by rapid gas supply at high-redshift and their
progenitors would be observed as high-redshift disks.
}",
      doi = {10.1063/1.4754401},
   adsurl = {http://adsabs.harvard.edu/abs/2012AIPC.1480..403O},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@INPROCEEDINGS{2010AIPC.1240..399O,
   author = {{Okamoto}, T.},
    title = "{Dark Satellites of the Milky Way}",
 keywords = {hydrodynamics, brightness, galaxies, dark matter, star formation, Hydrodynamics, Magnitudes and colors, luminosities, Dwarf galaxies, Dark matter, Star formation},
booktitle = {American Institute of Physics Conference Series},
     year = 2010,
   series = {American Institute of Physics Conference Series},
   volume = 1240,
   editor = {{Debattista}, V.~P. and {Popescu}, C.~C.},
    month = jun,
    pages = {399-402},
 abstract = "{We study the formation histories and present-day structure of galactic
subsystems formed in a high resolution hydrodynamic simulation of a
Milky Way-sized galaxy. The simulated satellites span nearly 4 orders of
magnitude in luminosity but have a very similar mass within their inner
600 pc with very little scatter. This is in agreement with the recent
measurements for dwarf spheroidal galaxies (dSphs). Interestingly,
subhaloes with circular velocity around 20 km/s sometimes host
satellites that are as bright as the classical satellites and sometimes
they are found as completely dark objects. We find that there is a
critical circular velocity at the epoch of reionization, below which
haloes fail to host star formation and found as ``dark satellites''
today.
}",
      doi = {10.1063/1.3458544},
   adsurl = {http://adsabs.harvard.edu/abs/2010AIPC.1240..399O},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

