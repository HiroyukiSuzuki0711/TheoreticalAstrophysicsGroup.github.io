@INPROCEEDINGS{2006SPIE.6055...34H,
   author = {{Holliman}, N. and {Baugh}, C. and {Frenk}, C. and {Jenkins}, A. and 
  {Froner}, B. and {Hassaine}, D. and {Helly}, J. and {Metcalfe}, N. and 
  {Okamoto}, T.},
    title = "{Cosmic cookery: making a stereoscopic 3D animated movie}",
booktitle = {Stereoscopic Displays and Virtual Reality Systems XIII},
     year = 2006,
   series = {Society of Photo-Optical Instrumentation Engineers (SPIE) Conference Series},
   volume = 6055,
   editor = {{Woods}, A.~J. and {Dodgson}, N.~A. and {Merritt}, J.~O. and 
  {Bolas}, M.~T. and {McDowall}, I.~E.},
    month = feb,
    pages = {34-45},
 abstract = "{This paper describes our experience making a short stereoscopic movie
visualizing the development of structure in the universe during the 13.7
billion years from the Big Bang to the present day. Aimed at a general
audience for the Royal Society's 2005 Summer Science Exhibition, the
movie illustrates how the latest cosmological theories based on dark
matter and dark energy are capable of producing structures as complex as
spiral galaxies and allows the viewer to directly compare observations
from the real universe with theoretical results. 3D is an inherent
feature of the cosmology data sets and stereoscopic visualization
provides a natural way to present the images to the viewer, in addition
to allowing researchers to visualize these vast, complex data sets. The
presentation of the movie used passive, linearly polarized projection
onto a 2m wide screen but it was also required to playback on a Sharp
RD3D display and in anaglyph projection at venues without dedicated
stereoscopic display equipment. Additionally lenticular prints were made
from key images in the movie. We discuss the following technical
challenges during the stereoscopic production process; 1) Controlling
the depth presentation, 2) Editing the stereoscopic sequences, 3)
Generating compressed movies in display specific formats. We conclude
that the generation of high quality stereoscopic movie content using
desktop tools and equipment is feasible. This does require careful
quality control and manual intervention but we believe these overheads
are worthwhile when presenting inherently 3D data as the result is
significantly increased impact and better understanding of complex 3D
scenes.
}",
      doi = {10.1117/12.646644},
   adsurl = {http://adsabs.harvard.edu/abs/2006SPIE.6055...34H},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@INPROCEEDINGS{2004ogci.conf..534O,
   author = {{Okamoto}, T. and {Nagashima}, M.},
    title = "{The roles of ram-pressure stripping and minor mergers in the evolution of galaxies}",
booktitle = {IAU Colloq. 195: Outskirts of Galaxy Clusters: Intense Life in the Suburbs},
     year = 2004,
   eprint = {astro-ph/0404302},
   editor = {{Diaferio}, A.},
    month = jul,
    pages = {534-538},
 abstract = "{We investigate environmental effects on evolution of bright cluster
galaxies in a {$\Lambda$}-dominated cold dark matter universe using a
combination of dissipationless N-body simulations and a semi-analytic
galaxy formation model. We incorporate effects of ram-pressure stripping
(RPS) and minor merger-induced small starburst (minor burst) into our
model. By considering minor burst, the observed morphology-radius
relation is successfully reproduced. When we do not consider minor
burst, the RPS hardly increases the intermediate B/T population. In
addition, the RPS and minor burst are not important for colours or star
formation rates of galaxies in the cluster core if star formation
time-scale is properly chosen, because the star formation is
sufficiently suppressed by consumption of the cold gas. We also find
that SF in bulge-dominated galaxies is mainly terminated by starburst
induced by major mergers in all environments.
}",
      doi = {10.1017/S1743921304001164},
   adsurl = {http://adsabs.harvard.edu/abs/2004ogci.conf..534O},
  adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

