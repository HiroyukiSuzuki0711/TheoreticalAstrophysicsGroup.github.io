@ARTICLE{2013ApJ...764..134K,
   author = {{Kino}, M. and {Ito}, H. and {Kawakatu}, N. and {Orienti}, M.
	},
    title = "{New Class of Very High Energy {$\gamma$}-Ray Emitters: Radio-dark Mini Shells Surrounding Active Galactic Nucleus Jets}",
