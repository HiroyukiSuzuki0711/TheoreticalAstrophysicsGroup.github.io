	Eprint = {astro-ph/0104361},
	Journal = {\apj},
	Keywords = {Cosmology: Dark Matter, Galaxies: Clusters: General, Galaxies: Formation, Galaxies: Halos, Cosmology: Large-Scale Structure of Universe, Methods: Numerical},
