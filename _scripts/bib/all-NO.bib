	Author = {{Takeuchi}, T.~T. and {Ishii}, T.~T. and {Hirashita}, H. and {Yoshikawa}, K. and {Matsuhara}, H. and {Kawara}, K. and {Okuda}, H.},
	Doi = {10.1093/pasj/53.1.37},
	Eprint = {astro-ph/0009460},
	Journal = {\pasj},
	Keywords = {GALAXIES: ACTIVE, GALAXIES: EVOLUTION, GALAXIES: FORMATION, GALAXIES: STARBURST, INFRARED: GALAXIES},
	Month = feb,
	Pages = {37-52},
	Title = {{Exploring Galaxy Evolution from Infrared Number Counts and Cosmic Infrared Background}},
