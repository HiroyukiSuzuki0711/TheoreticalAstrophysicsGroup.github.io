@article{2006ApJ...648....7K,
	Abstract = {{We report an extensive search for Ly{$\alpha$} emitters (LAEs) at z=6.5 in
the Subaru Deep Field. Subsequent spectroscopy with Subaru and Keck
identified eight more LAEs, giving a total of 17 spectroscopically
confirmed LAEs at z=6.5. Based on this spectroscopic sample of 17,
