@article{2001ApJ...546..966K,
	Abstract = {{Recent multiwaveband observations of Seyfert nuclei and QSOs established
significant deviations in the spectral shape of the big blue bump from a
blackbody spectral shape; soft X-ray excess has a spectral index {$\alpha$}
(F$_{nu}$\~{}{$\nu$}$^{-alpha}$) of 1.6 and hard X-ray tail
