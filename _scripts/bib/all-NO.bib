	Keywords = {cosmology: theory, galaxies: formation, hydrodynamics, molecular processes, radiative transfer},
	Month = sep,
	Pages = {480-488},
	Primaryclass = {astro-ph.CO},
	Title = {{Formation Criteria and the Mass of Secondary Population III Stars}},
