	Doi = {10.1093/pasj/51.3.345},
	Journal = {\pasj},
	Keywords = {ACCRETION, ACCRETION DISKS, GALAXIES: ACTIVE, GALAXIES: NUCLEI, GALAXIES: STARBURST, RADIATIVE TRANSFER},
