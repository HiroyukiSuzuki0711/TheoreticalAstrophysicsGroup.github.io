	Eprint = {astro-ph/0001169},
	Journal = {\apj},
	Keywords = {Galaxies: Formation, Molecular Processes, Radiative Transfer, shock heating},
	Month = jul,
	Pages = {578-588},
	Title = {{Formation of Primordial Galaxies under Ultraviolet Background Radiation}},
