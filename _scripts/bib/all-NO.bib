@article{2012MNRAS.425..878M,
	Abstract = {{Using stacks of Ly{$\alpha$} images of 2128 Ly{$\alpha$} emitters (LAEs) and
24 proto-cluster UV-selected galaxies (LBGs) at z = 3.1, we examine the
surface brightness profiles of Ly{$\alpha$} haloes around high-z galaxies
