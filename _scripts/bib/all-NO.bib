@article{2008ApJ...676..137K,
	Abstract = {{In order to investigate how the growth of galactic bulges progresses
with the growth of central black holes (BHs), we observed molecular gas
(fuel for the coming star formation) in possibly young active galaxies:
narrow-line Seyfert 1 galaxies (NLS1s). We present the results of radio
