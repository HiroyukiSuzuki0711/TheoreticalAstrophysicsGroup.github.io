@article{2012ApJ...746...26M,
	Abstract = {{Ultraluminous infrared galaxies (ULIRGs) with multiple ({\gt}=3) nuclei
are frequently observed. It has been suggested that these nuclei are
produced by multiple major mergers of galaxies. The expected rate of
