	Adsurl = {http://adsabs.harvard.edu/abs/2013MNRAS.436.3695R},
	Archiveprefix = {arXiv},
	Author = {{Rieder}, S. and {Ishiyama}, T. and {Langelaan}, P. and {Makino}, J. and {McMillan}, S.~L.~W. and {Portegies Zwart}, S.},
	Doi = {10.1093/mnras/stt1848},
	Eprint = {1309.7352},
	Journal = {\mnras},
	Keywords = {galaxies: evolution, galaxies: star clusters: general, dark matter},
