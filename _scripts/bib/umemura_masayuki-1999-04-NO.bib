@ARTICLE{2001MNRAS.321..593N,
   author = {{Nakamoto}, T. and {Umemura}, M. and {Susa}, H.},
    title = "{The effects of radiative transfer on the reionization of an inhomogeneous universe}",
  journal = {\mnras},
