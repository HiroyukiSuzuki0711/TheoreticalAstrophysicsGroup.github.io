@ARTICLE{2014MNRAS.442..110M,
   author = {{Momose}, R. and {Ouchi}, M. and {Nakajima}, K. and {Ono}, Y. and 
	{Shibuya}, T. and {Shimasaku}, K. and {Yuma}, S. and {Mori}, M. and 
	{Umemura}, M.},
    title = "{Diffuse Ly{$\alpha$} haloes around galaxies at z = 2.2-6.6: implications for galaxy formation and cosmic reionization}",
  journal = {\mnras},
